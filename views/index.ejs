<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food Ordering Website</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .food-card {
            transition: transform 0.3s;
            margin-bottom: 20px;
        }
        .food-card:hover {
            transform: translateY(-5px);
        }
        .food-image {
            height: 200px;
            object-fit: cover;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/">üçΩÔ∏è Food Ordering</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <% if (currentUser) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Hi, <%= currentUser.username %></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/add-food">Add New Food</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/logout">Logout</a>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/register">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/login">Login</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <div class="hero-section">
        <div class="container">
            <h1>Delicious Food Delivered</h1>
            <p>Order your favorite meals from the best restaurants in town</p>
        </div>
    </div>

    <div class="container">
        <div class="row mb-4">
            <div class="col-12">
                <h2 class="text-center mb-4">Our Menu</h2>
                <div class="row">
                    <% foods.forEach(food => { %>
                        <div class="col-md-4">
                            <div class="food-card">
                                <img src="<%= food.image %>" class="food-image" alt="<%= food.name %>">
                                <div class="card-body">
                                    <span class="category-badge"><%= food.category %></span>
                                    <h5 class="card-title"><%= food.name %></h5>
                                    <p class="card-text"><%= food.description %></p>
                                    <p class="price">$<%= food.price.toFixed(2) %></p>
                                    <% if (currentUser) { %>
                                    <div class="d-flex justify-content-between">
                                        <a href="/edit-food/<%= food._id %>" class="btn btn-sm btn-outline-secondary">Edit</a>
                                        <form action="/delete-food/<%= food._id %>" method="POST" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this item?')">Delete</button>
                                        </form>
                                    </div>
                                    <% } else { %>
                                        <button class="btn btn-primary w-100" onclick="alert('Please log in to order or manage food items.')">Order Now</button>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>

    <footer class="bg-dark text-white py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>Food Ordering</h5>
                    <p>Delicious food delivered to your doorstep</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <h5>Contact Us</h5>
                    <p>Email: info@foodordering.com<br>Phone: (123) 456-7890</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 